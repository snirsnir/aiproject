    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // אנימציית מסלול התהליך
            setTimeout(() => {
                document.querySelector('.process-path').classList.add('animate');
            }, 1000);
            
            // טיפול בלחיצות על כרטיסי השיעורים
            const lessonCards = document.querySelectorAll('.lesson-card');
            lessonCards.forEach(card => {
                card.addEventListener('click', function() {
                    lessonCards.forEach(c => c.classList.remove('active'));
                    this.classList.add('active');
                    
                    const lessonId = this.id;
                    const stepElements = document.querySelectorAll('.step');
                    
                    // מציג את השלבים הרלוונטיים לשיעור שנבחר
                    stepElements.forEach(step => {
                        step.classList.remove('active');
                        
                        if (lessonId === 'lesson1' && ['step1', 'step2', 'step3', 'step4'].includes(step.id)) {
                            step.classList.add('active');
                        } else if (lessonId === 'lesson2' && ['step5', 'step6', 'step7'].includes(step.id)) {
                            step.classList.add('active');
                        } else if (lessonId === 'lesson3' && ['step8', 'step9', 'step10'].includes(step.id)) {
                            step.classList.add('active');
                        }
                    });
                    
                    // איפוס מצב כפתורים
                    currentStep = document.querySelector('.step.active').id;
                    updateButtonState();
                });
            });
            
            // טיפול בכפתורי ניווט הבא/הקודם
            const prevBtn = document.getElementById('prev-btn');
            const nextBtn = document.getElementById('next-btn');
            let currentStep = 'step1';
            
            // הפעולה שקורית כאשר לוחצים על הכפתור 'הבא'
            nextBtn.addEventListener('click', function() {
                const currentStepElement = document.getElementById(currentStep);
                const currentStepNumber = parseInt(currentStep.substring(4));
                const nextStepNumber = currentStepNumber + 1;
                const nextStepId = 'step' + nextStepNumber;
                const nextStepElement = document.getElementById(nextStepId);
                
                if (nextStepElement) {
                    currentStepElement.classList.remove('active');
                    nextStepElement.classList.add('active');
                    currentStep = nextStepId;
                    
                    // עדכון כרטיס השיעור הפעיל
                    if (nextStepNumber <= 4) {
                        document.getElementById('lesson1').click();
                    } else if (nextStepNumber <= 7) {
                        document.getElementById('lesson2').click();
                    } else {
                        document.getElementById('lesson3').click();
                    }
                    
                    updateButtonState();
                }
            });
            
            // הפעולה שקורית כאשר לוחצים על הכפתור 'הקודם'
            prevBtn.addEventListener('click', function() {
                const currentStepElement = document.getElementById(currentStep);
                const currentStepNumber = parseInt(currentStep.substring(4));
                const prevStepNumber = currentStepNumber - 1;
                const prevStepId = 'step' + prevStepNumber;
                const prevStepElement = document.getElementById(prevStepId);
                
                if (prevStepElement) {
                    currentStepElement.classList.remove('active');
                    prevStepElement.classList.add('active');
                    currentStep = prevStepId;
                    
                    // עדכון כרטיס השיעור הפעיל
                    if (prevStepNumber <= 4) {
                        document.getElementById('lesson1').click();
                    } else if (prevStepNumber <= 7) {
                        document.getElementById('lesson2').click();
                    } else {
                        document.getElementById('lesson3').click();
                    }
                    
                    updateButtonState();
                }
            });
            
            // עדכון מצב הכפתורים (מאופשר/מושבת)
            function updateButtonState() {
                const currentStepNumber = parseInt(currentStep.substring(4));
                
                prevBtn.disabled = currentStepNumber === 1;
                nextBtn.disabled = currentStepNumber === 10;
                
                // אפקט דופק בכפתור הסיום
                if (currentStepNumber === 10) {
                    document.getElementById('finish-btn').classList.add('pulse');
                } else {
                    document.getElementById('finish-btn').classList.remove('pulse');
                }
            }
            
            // כפתור סיום התהליך
            document.getElementById('finish-btn').addEventListener('click', function() {
                alert('כל הכבוד! סיימתם את תהליך הפרויקט המלא. עכשיו אתם מוכנים ליישם זאת בכיתה!');
            });
            
            // חזרה לתחילת התהליך
            document.getElementById('lesson1').click();
        });
    </script>
</body>
</html>
